{% extends '::base.html.twig' %}
{% block title %}FindText+ Problems{% endblock %}
{% block body -%}
    <h1 class="page-header">FindText+ Problem #{{entity.id}}</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('findtext') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to List</a></p>
      </div>
    </div>
    {% if is_granted('ROLE_FINDTEXT_EDIT', entity) %}
        <div class="row">
            <div class="col-xs-12">
                <p><a class="badge" href="{{ path('findtext_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit Request</a></p>
            </div>
        </div>
    {% endif %}
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-responsive table-striped">
            <caption>Submission Info</caption>
            <tbody>
                <tr><th>Received</th><td>{{ entity.created|date('l n/j/y g:i A') }}</td></tr>
                <tr><th>Patron</th><td>{{ entity.patronFirstName }} {{ entity.patronLastName }}</td></tr>
                <tr><th>Email</th><td>{{ entity.patronEmail }}</td></tr>
            </tbody>
        </table>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">
          <div class="panel panel-info">
            <div class="panel-heading">Problem</div>
            <div class="panel-body">
                <p>{{entity.comment}}</p>
            </div>
          </div>
      </div>
    </div>
{% endblock %}
