{% extends '::base.html.twig' %}
{% block title %}Patron Feedback Type{% endblock %}
{% block body %}  
<h1 class="page-header">Feedback Type: {{entity.name}}</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('feedbackcategory') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to List</a></p>
      </div>
    </div>
    {% if is_granted('ROLE_FEEDBACK_EDIT', entity) %}
        <div class="row">
            <div class="col-xs-12">
                <p><a class="badge" href="{{ path('feedbackcategory_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit Category</a></p>
            </div>
        </div>
    {% endif %}
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Type Information</caption>
              <tbody>
                  <tr>
                      <td><strong>Type</strong></td>
                      <td>{{entity.name}}</td>
                  </tr>
              </tbody>
            </table>
      </div>
    </div>
{% endblock %}
