{% extends '::base.html.twig' %}
{% block title %}Patron Groups{% endblock %}
{% block body -%}
    <h1 class="page-header">Edit Group: {{entity.name}}</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('admin_patrongroup') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to List</a></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="well well-lg">{{ form(edit_form) }} 
            {% if is_granted('ROLE_ADMIN', entity) %}
                {{ form(delete_form) }}
            {% endif %}
        </div>
      </div>
    </div>
{% endblock %}
