{% extends '::base.html.twig' %}
{% block title %}Patron Groups{% endblock %}
{% block body -%}
    <h1 class="page-header">Patron Groups 
        {% if is_granted('ROLE_ADMIN') %}
         <span><a class="btn btn-sm btn-primary" href="{{ path('admin_patrongroup_new') }}"><span class="glyphicon glyphicon-plus"></span> New Group</a></span>
        {% endif %}
    </h1>            
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-responsive table-striped records_list">
                <thead>
                    <tr>
                        <th>Group Title</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            {{ entity.name }}
                            {% if is_granted('ROLE_ADMIN', entity) %}
                                <a class="badge" href="{{ path('admin_patrongroup_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                            {% endif %}
                        </td>        
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endblock %}
