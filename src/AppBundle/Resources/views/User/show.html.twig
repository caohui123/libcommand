{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="page-header">LDAP User {{ entity.username }}</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('admin') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to Admin Panel</a></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="btn-group btn-group-vertical" role="group" aria-label="actions">
          <div class="btn-group" role="group">
            {% if entity.isActive %}
              <div class="alert alert-success" role="alert">
                <p>This user is active</p>
              </div>
            {% else %}
              <div class="alert alert-danger" role="alert">
                <p>This user is inactive.</p>
              </div>
            {% endif %}
          </div>
          <div class="btn-group" role="group">
            <a class="btn btn-sm btn-default" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a>
          </div>
          <div class="btn-group" role="group">
            {{ form(delete_form) }}
          </div>
        </div>
      </div>
    </div> 
    
{% endblock %}
