{% extends '::base.html.twig' %}
{% block title %}Liaison Subject Areas{% endblock %}
{% block body -%}
    
    {# Page Heading #}
    {% set headingvars = {'headingcontent' : entity.name } %}
    {% include 'snippets/pageHeading.html.twig' with headingvars %}
    
    {# Back button, edit and print buttons #}
    {% set toolbarvars = {'basepath' : path('liaisonsubject'), 'editpath' : path('liaisonsubject_edit', { 'id': entity.id }), 'printpath' : path('liaisonsubject_print', { 'id': entity.id }), 'editrole' : 'ROLE_LIAISONSUBJECT_EDIT'} %}
    {% include 'snippets/showToolbar.html.twig' with toolbarvars %}
    
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Area Information</caption>
              <tbody>
                  <tr>
                      <th>Title</th>
                      <td>{{entity.name}}</td>
                  </tr>
                  <tr>
                      <th>Primary Liaison</th>
                      <td>
                          {% if entity.primaryLiaison is not null %}
                              {{entity.primaryLiaison}}
                          {% else %}
                              none
                          {% endif %} 
                      </td>
                  </tr>
                  <tr>
                      <th>Secondary Liaison</th>
                      <td>
                          {% if entity.secondaryLiaison is not null %}
                              {{entity.secondaryLiaison}}
                          {% else %}
                              none
                          {% endif %} 
                      </td>
                  </tr>
                  <tr>
                      <th>Parent Subject</th>
                      <td>
                          {% if entity.parent is not null %}
                              {{entity.parent}}
                          {% else %}
                              none (Top level)
                          {% endif %} 
                      </td>
                  </tr>
                  <tr>
                      <th>Phone Number</th>
                      <td>{{entity.phone}}</td>
                  </tr>
              </tbody>
          </table>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Faculty Liaison</caption>
              <tbody>
                  <tr>
                      <th>Name</th>
                      <td>{{entity.facultyName}}</td>
                  </tr>
                  <tr>
                      <th>Phone</th>
                      <td>{{entity.facultyPhone}}</td>
                  </tr>
                  <tr>
                      <th>Office</th>
                      <td>{{entity.facultyOffice}}</td>
                  </tr>
              </tbody>
          </table>
      </div>
    </div>
{% endblock %}
