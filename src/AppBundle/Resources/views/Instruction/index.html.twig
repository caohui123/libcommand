{% extends '::base.html.twig' %}
{% block title %}My Instruction Sessions{% endblock %}
{% block body -%}
    <nav id="instruction-navigation" class="collapse navbar-collapse">
        <ul class="nav navbar-nav nav-pills">
            <li role="presentation" class="active"><a href="{{ path('instruction') }}"><span class="glyphicon glyphicon-dashboard"></span> My Instruction Dashboard</a></li>
            <li role="presentation"><a href="{{ path('groupinstruction') }}">My Group Sessions</a></li>
            <li role="presentation"><a href="{{ path('individualinstruction') }}">My Individual Sessions</a></li>
        </ul>
        <ul class="nav nav-pills navbar-right">
            <li role="presentation"><a href="{# path('individualinstruction') #}"><span class="glyphicon glyphicon-search"></span> Search Sessions</a></li>
        </ul>
    </nav>
        
    {# Page Heading #}
    {% set headingvars = {'headingcontent' : 'My Instruction Sessions', 'newbutton' : false } %}
    {% include 'snippets/pageHeading.html.twig' with headingvars %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6">
            <p><span><a class="btn btn-sm btn-primary" href="{{ path('groupinstruction_new') }}" aria-labelledby="New group instruction"><span class="glyphicon glyphicon-plus"></span> New Group Instruction</a></span></p>
            <p class="badge">{{ group_pagination.getPaginationData.totalCount }} Group Sessions</p>
            <p>Page {{group_pagination.getPaginationData.current}} of {{group_pagination.getPaginationData.pageCount}}</p>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <table class="table table-responsive table-striped records_list" id="jquerySortable_1">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Start Time</th>
                                <th>Course</th>
                                <th>Attendance</th>
                                <th>Level</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for entity in group_pagination %}
                            <tr>
                                <td>{{ entity.instructionDate|date('n/j/y') }}</td>
                                <td>{{ entity.startTime|date('g:i A') }}</td>
                                <td>{{ entity.course }}</td>
                                <td>{{ entity.attendance }}</td>
                                <td>
                                    {% if entity.level == 'grad' %}
                                        Graduate 
                                    {% elseif entity.level == 'high school' %}
                                        High School
                                    {% else %}
                                        {{ entity.level|capitalize }}
                                    {% endif %}
                                    {% if entity.levelDescription %}
                                        ({{ entity.levelDescription}})
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="badge" href="{{ path('groupinstruction_edit', { 'id': entity.id }) }}" aria-label="edit"><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a class="badge" href="{{ path('groupinstruction_print', { 'id': entity.id }) }}" target="_blank" aria-label="print"><span class="glyphicon glyphicon-print"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    
                    <p>Page {{group_pagination.getPaginationData.current}} of {{group_pagination.getPaginationData.pageCount}}</p>
                    {% include 'AppBundle:Pagination:paginator.html.twig' with {'paginator':group_pagination} %}
                </div>
            </div>
        </div> <!-- #END Group Instruction -->
    </div>
    {% endblock %}
{% block documentReady %} 
    //uses jQuery Tablesorter to sort columns for paginated results (http://tablesorter.com/)
    $('#jquerySortable_1').tablesorter({
        headers: {
            5: {
                sorter: false
            },
            6: {
                sorter: false
            }
        }
    });
    
    //refresh the page with the new number of records per page
    $('#paginationMaxResults').on('change', function(){
        var item = $(this).find(":selected").val();
        var url = '{{path('instruction', {'maxItems': '_item'})}}';
        
        window.location.href = url.replace('_item',item );
    });
    {{ parent() }}
{% endblock %}