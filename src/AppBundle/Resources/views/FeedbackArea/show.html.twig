{% extends '::base.html.twig' %}
{% block title %}Patron Feedback Areas{% endblock %}
{% block body %}  
<h1 class="page-header">{{entity.name}}</h1>
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <p><a class="btn btn-sm btn-primary" href="{{ path('feedbackarea') }}" aria-label="Back to Feedback Area List"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
        </div>
        <div class="col-xs-12 col-sm-8 text-right" role="toolbar" aria-label="options-toolbar">
            <p>
                {% if is_granted('ROLE_FEEDBACK_EDIT', entity) %}
                <a class="btn btn-sm btn-default" href="{{ path('feedbackarea_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                {% endif %}
                <a class="btn btn-sm btn-default" target="_blank" href="{{ path('feedbackarea_print', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-print"></span></a>
            </p>
        </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Area Information</caption>
              <tbody>
                  <tr>
                      <td>Name</td>
                      <td>{{entity.name}}</td>
                  </tr>
                  <tr>
                      <td>Parent Area</td>
                      <td>
                        {% if entity.parent is not null %}  
                          {{entity.parent}}
                        {% else %}
                            none
                        {% endif %}
                      </td>
                  </tr>
              </tbody>
            </table>
      </div>
    </div>
{% endblock %}
