{% extends '::base.html.twig' %}
{% block title %}Patron Feedback Areas{% endblock %}
{% block body %}  
<h1 class="page-header">{{entity.name}}</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('feedbackarea') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to List</a></p>
      </div>
    </div>
    {% if is_granted('ROLE_FEEDBACK_EDIT', entity) %}
        <div class="row">
            <div class="col-xs-12">
                <p><a class="badge" href="{{ path('feedbackarea_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit Request</a></p>
            </div>
        </div>
    {% endif %}
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Area Information</caption>
              <tbody>
                  <tr>
                      <td>Name</td>
                      <td>{{entity.name}}</td>
                  </tr>
                  <tr>
                      <td>Parent Area</td>
                      <td>
                        {% if entity.parent is not null %}  
                          {{entity.parent}}
                        {% else %}
                            none
                        {% endif %}
                      </td>
                  </tr>
              </tbody>
            </table>
      </div>
    </div>
{% endblock %}
