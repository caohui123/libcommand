{% extends '::base.html.twig' %}
{% block title %}Library Hours: Special Events{% endblock %}
{% block body -%}    
    
    {# Page Heading #}
    {% set headingvars = {'headingcontent' : 'Event: ' ~ entity.name } %}
    {% include 'snippets/pageHeading.html.twig' with headingvars %}
    
    {# Back button, edit and print buttons #}
    {% set toolbarvars = {'basepath' : path('hoursevent'), 'editpath' : path('hoursevent_edit', { 'id': entity.id }), 'editrole' : 'ROLE_HOURS_EDIT' } %}
    {% include 'snippets/showToolbar.html.twig' with toolbarvars %}
    
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-responsive table-striped">
            <tbody>
                <tr><th>Event</th><td>{{entity.name}}</td></tr>
                <tr><th>Start</th><td>{{entity.startDate|date('m/d/Y')}}</td></tr>
                <tr><th>End</th><td>{{entity.endDate|date('m/d/Y')}}</td></tr>
            </tbody>
        </table>
      </div>
    </div>
{% endblock %}
