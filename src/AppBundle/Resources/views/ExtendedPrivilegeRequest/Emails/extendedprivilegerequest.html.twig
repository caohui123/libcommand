{% extends "emailbase.html.twig" %}

{% block body %}
{% if form.facultyFirstName is defined %}
  Dear {{ form.facultyFirstName }},
{% else %}
  Dear Patron,
{% endif %}

<h1>Thank you for your Extended Privilege Request.</h1>
<p>Here is a summary of your request.</p>
<table border="0" cellpadding="10" cellspacing="1" width="100%">
  <caption style="background:rgb(108, 122, 137); padding:4px; color:#FFFFFF"><strong>General Information</strong></caption>
  <tr><td align="right">Received</td><td align="right">{{ form.created|date('l n/j/y g:i A') }}</td></tr>
  <tr><td align="right">Privilege Expiration</td><td align="right">{{ form.expirationDate|date('l n/j/y') }}</td></tr>
</table>
<table border="0" cellpadding="10" cellspacing="1" width="100%">
  <caption style="background:rgb(108, 122, 137); padding:4px; color:#FFFFFF"><strong>Student Information</strong></caption>
  <tr><td align="right">Name</td><td align="right">{{ form.studentFirstName }} {{ form.studentLastName }}</td></tr>
  <tr><td align="right">E-Number</td><td align="right">{{ form.studentEnumber }}</td></tr>
  <tr><td align="right">Emich Email</td><td align="right">{{ form.studentEmail }}</td></tr>
  <tr><td align="right">Phone</td><td align="right">{{ form.studentPhone }}</td></tr>
</table>
<table border="0" cellpadding="10" cellspacing="1" width="100%">
  <caption style="background:rgb(108, 122, 137); padding:4px; color:#FFFFFF"><strong>Faculty Information</strong></caption>
  <tr><td align="right">Name</td><td align="right">{{ form.facultyFirstName }} {{ form.facultyLastName }}</td></tr>
  <tr><td align="right">Department</td><td align="right">{{ facultySubject }}</td></tr>
  <tr><td align="right">Emich Email</td><td align="right">{{ form.facultyEmail }}</td></tr>
  <tr><td align="right">Phone</td><td align="right">{{ form.facultyPhone }}</td></tr>
</table>
{% endblock %}
