{% extends '::base.html.twig' %}
{% block title %}Extended Privilege Request{% endblock %}
{% block body %}
    
    {# Page Heading #}
    {% set headingvars = {'headingcontent' : 'Edit Extended Privilege Request #' ~ entity.id } %}
    {% include 'snippets/pageHeading.html.twig' with headingvars %}
    
    {# Back button and print button #}
    {% set toolbarvars = {'basepath' : path('extendedprivilege'), 'printpath' : path('extendedprivilege_print', { 'id': entity.id }) } %}
    {% include 'snippets/editToolbar.html.twig' with toolbarvars %}
    
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">               
        <div class="well well-lg">
          {{ form(edit_form) }}
          {% if is_granted('ROLE_EXTENDEDPRIVILEGES_DELETE', entity) %}
          {{ form(delete_form) }}
          {% endif %}
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">    
          <table class="table table-responsive table-striped">
              <caption>Sumbssion Information</caption>
              <tbody>
                  <tr>
                      <th>Received</th>
                      <td>{{ entity.created|date('l n/j/y g:i A') }}</td>
                  </tr>
                  <tr>
                      <th>Privilege Expiration</th>
                      <td>{{ entity.expirationDate|date('l n/j/y') }}</td>
                  </tr>
                  <tr>
                      <th>Note</th>
                      <td>{{ entity.note }}</td>
                  </tr>
                  <tr>
                      <th>Status</th>
                      <td>{{ entity.status }}</td>
                  </tr>
              </tbody>
            </table>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
           <table class="table table-responsive table-striped">
              <caption>Faculty Information</caption>
              <tbody>
                  <tr>
                      <th>Name</th>
                      <td>{{ entity.facultyFirstName }} {{ entity.facultyLastName }}</td>
                  </tr>
                  <tr>
                      <th>Department</th>
                      <td>{{ entity.facultySubject }}</td>
                  </tr>
                  <tr>
                      <th>Phone</th>
                      <td>{{ entity.facultyPhone }}</td>
                  </tr>
                  <tr>
                      <th>Email</th>
                      <td>{{ entity.facultyEmail }}</td>
                  </tr>
              </tbody>
            </table> 
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Student Information</caption>
              <tbody>
                  <tr>
                      <th>Name</th>
                      <td>{{ entity.studentFirstName }} {{ entity.studentLastName }}</td>
                  </tr>
                  <tr>
                      <th>E-Number</th>
                      <td>{{ entity.studentEnumber }}</td>
                  </tr>
                  <tr>
                      <th>Phone</th>
                      <td>{{ entity.studentPhone }}</td>
                  </tr>
                  <tr>
                      <th>Email</th>
                      <td>{{ entity.studentEmail }}</td>
                  </tr>
              </tbody>
            </table>
      </div>
    </div>
{% endblock %}
