{% extends '::base.html.twig' %}
{% block title %}Material Request Media Types{% endblock %}
{% block body -%}  
    
    {# Page Heading #}
    {% set headingvars = {'headingcontent' : 'Media Type: ' ~ entity.name } %}
    {% include 'snippets/pageHeading.html.twig' with headingvars %}
    
    {# Back button, edit and print buttons #}
    {% set toolbarvars = {'basepath' : path('avrequests'), 'editpath' : path('mediatype_edit', { 'id': entity.id }), 'printpath' : path('mediatype_print', { 'id': entity.id }), 'editrole' : 'ROLE_MATERIALPURCHASE_EDIT'} %}
    {% include 'snippets/showToolbar.html.twig' with toolbarvars %}
    
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-responsive table-striped">
            <tbody>
                <tr><th>Media</th><td>{{entity.name}}</td></tr>
            </tbody>
        </table>
      </div>
    </div>
{% endblock %}
