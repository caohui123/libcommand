{% extends '::base.html.twig' %}

{% block body -%}
    <h1>HoursSemester list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Season</th>
                <th>Year</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hourssemester_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>
                    {% if entity.season == 0 %}
                        Winter
                    {% elseif entity.season == 1 %}
                        Spring
                    {% elseif entity.season == 2 %}
                        Summer
                    {% elseif entity.season == 3 %}
                        Fall
                    {% endif %}    
                </td>
                <td>{{ entity.year }}</td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.endDate %}{{ entity.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hourssemester_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hourssemester_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hourssemester_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
