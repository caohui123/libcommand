{% extends '::base.html.twig' %}

{% block body -%}
    <h1>HoursSemester</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Season</th>
                <td>
                    {% if entity.season == 0 %}
                        Winter
                    {% elseif entity.season == 1 %}
                        Spring
                    {% elseif entity.season == 2 %}
                        Summer
                    {% elseif entity.season == 3 %}
                        Fall
                    {% endif %} 
                </td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ entity.year }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('hourssemester') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('hourssemester_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
