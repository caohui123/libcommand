{% extends '::base.html.twig' %}
{% block title %}Extended Privilege Status{% endblock %}
{% block body -%}
    <h1 class="page-header">Status: {{entity.name}}</h1>
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <p><a class="btn btn-sm btn-primary" href="{{ path('extendedprivilege_status') }}" aria-label="Back to Status List"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
        </div>
        <div class="col-xs-12 col-sm-8 text-right" role="toolbar" aria-label="options-toolbar">
            <p>
                {% if is_granted('ROLE_EXTENDEDPRIVILEGES_EDIT', entity) %}
                <a class="btn btn-sm btn-default" href="{{ path('extendedprivilege_status_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                {% endif %}
                <a class="btn btn-sm btn-default" target="_blank" href="{{ path('extendedprivilege_status_print', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-print"></span></a>
            </p>
        </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-responsive table-striped">
            <tbody>
                <tr><th>Status Name</th><td>{{entity.name}}</td></tr>
            </tbody>
        </table>
      </div>
    </div>
{% endblock %}
