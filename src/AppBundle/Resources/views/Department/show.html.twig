{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Department</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ entity.room }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Contentchangedby</th>
                <td>{{ entity.contentChangedBy }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Department Staff</h2>     
    {% if members is empty %}
      <p class="alert alert-info">There are no staff members in this department.</p>
    {% else %}
      <ul>
      {% for member in members %}
          <li>{{ member.lastName }}, {{ member.firstName }}</li>
      {% endfor %}
      </ul>
    {% endif %}
      
        <ul class="record_actions">
    <li>
        <a href="{{ path('department') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('department_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
