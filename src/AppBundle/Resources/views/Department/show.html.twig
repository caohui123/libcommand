{% extends '::base.html.twig' %}
{% block title %}Departments{% endblock %}
{% block body -%}
    <h1 class="page-header">{{ entity.name }} Department</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('department') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to List</a></p>
      </div>
    </div>
    {% if is_granted('ROLE_DEPARTMENTS_EDIT', entity) %}
    <div class="row">
        <div class="col-xs-12">
            <p><a class="badge" href="{{ path('department_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit Department</a></p>
        </div>
    </div>
    {% endif %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-8">
            <table class="table table-striped table-responsivee">
                <tbody>
                    <tr>
                        <td>Name</td>
                        <td>
                            {{entity.name}}
                        </td>
                    </tr>
                    <tr>
                        <td>Phone</td>
                        <td>
                            {{ entity.phone }}
                        </td>
                    </tr>
                    <tr>
                        <td>Fax</td>
                        <td>
                            {{ entity.fax }}
                        </td>
                    </tr>
                    <tr>
                        <td>Fax</td>
                        <td>
                            {{ entity.fax }}
                        </td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td>
                            {{ entity.description }}
                        </td>
                    </tr>
                    {% if entity.parent is not null %}
                    <tr>
                        <td>Parent Department</td>
                        <td>
                            {{ entity.parent }}
                        </td>
                    </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">{{ entity.name }} Department Staff</div>
                <div class="panel-body">
                    {% if members is empty %}
                    <p class="alert alert-info">There are no staff members in this department.</p>
                    {% else %}
                    <ul class="list-group">
                    {% for member in members %}
                        <li class="list-group-item">
                            {% if is_granted('ROLE_STAFF_VIEW', entity) %}
                                <a href="{{ path('staff_show', {'id': member.id}) }}">{{ member.lastName }}, {{ member.firstName }}</a>
                            {% else %}
                                {{ member.lastName }}, {{ member.firstName }}
                            {% endif %} 
                        </li>
                    {% endfor %}
                    </ul>
                  {% endif %}
                </div>
                <div class="panel-footer">
                    <p>To include a library staff member as part of this department, select a <a href="{{ path('staff') }}" target="_blank">staff member</a> and choose it in the <mark>"Department"</mark> menu.</p>
                    <p>To remove a library staff member currently in this department, click the name below.</p>
                </div>
            </div> 
        </div>
    </div>
{% endblock %}
