{% extends '::base.html.twig' %}
{% block title %}Staff Areas{% endblock %}
{% block body -%}
    <h1 class="page-header">Area {{entity.title}}</h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('admin_staffareas') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to List</a></p>
      </div>
    </div>
    {% if is_granted('ROLE_ADMIN', entity) %}
    <div class="row">
        <div class="col-xs-12">
            <p><a class="badge" href="{{ path('admin_staffareas_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit Area</a></p>
        </div>
    </div>
    {% endif %}
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-responsive table-striped">
            <tbody>
                <tr><th>Area</th><td>{{entity.title}}</td></tr>
            </tbody>
        </table>
      </div>
    </div>
{% endblock %}
