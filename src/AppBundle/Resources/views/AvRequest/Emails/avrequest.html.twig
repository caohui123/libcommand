{% extends "emailbase.html.twig" %}

{% block body %}
{% if form.facultyFirstName is defined %}
  Dear {{ form.facultyFirstName }},
{% else %}
  Dear Patron,
{% endif %}

<h3>Thank you for your Audio/Visual Request.</h3><br>

<strong>Event/Equipment summary:</strong><br>
<dl>
  <dt>Request Submission</dt>
  <dd>{{ form.created|date('l n/j/y g:i A') }}</dd>
  <dt>Event Date</dt>
  <dd>{{ form.eventDate|date('l n/j/y g:i A') }}</dd>
  <dt>Pickup Date</dt>
  <dd>{{ form.pickupDate|date('l n/j/y g:i A') }}</dd>
  <dt>Return Date</dt>
  <dd>{{ form.returnDate|date('l n/j/y g:i A') }}</dd>
  <dt>Special Instruction</dt>
  <dd>{{ form.specialInstruction }}</dd>
  <dt>Event Locations</dt>
  {% for event in events %}
    <dd>{{ event.location }} at {{ even.time|date('g:i A') }}</dd>
  {% endfor %}
  <dt>Equipment</dt>
  {% for equip in equipment %}
    <dd>{{ equip.quantity }}x {{ equip.equipment }}</dd>
  {% endfor %}
</dl>

<strong>Other information:</strong><br>
<dl>
  <dt>Faculty Name</dt>
  <dd>{{ form.facultyFirstName }} {{ form.facultyLastName }} </dd>
  <dt>Department</dt>
  <dd>{{ facultySubject }}</dd>
  <dt>Phone</dt>
  <dd>{{ form.facultyPhone }}</dd>
  <dt>Course</dt>
  <dd>{{ form.course }}</dd>
  <dt>Number of Attendees</dt>
  <dd>{{ form.attendees }}</dd>
  <dt>Student Information</dt>
  <dd>{{ form.studentName }} | {{form.studentEnumber}}</dd>
</dl>


--<br>
This email was automatically generated from the EMU AV Request System.
{% endblock %}
