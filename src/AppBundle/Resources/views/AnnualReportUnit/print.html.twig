{% extends '::printbase.html.twig' %}
{% block title %}Annual Report Unit{% endblock %}
{% block body %}
<h1>Annual Report Unit: {{entity.name}}</h1>
<button class="print-btn" onclick="window.print();">Print</button>
    <table class="libcommand-print-table libcommand-print-table-650">
        <caption>Session Details</caption>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Reports</th>
                <td>
                    {% if years is not null %}
                        <ul>
                        {% for report in years %}
                            <li style="list-style-type:none">{{ report }}</li>
                        {% endfor %}
                        </ul>
                    {% else %}
                        None
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    {% if entity.isActive %}
                        Active
                    {% else %}
                        Inactive
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table> 

{% endblock %}
