{% extends '::base.html.twig' %}
{% block title %}Group Instruction Sessions{% endblock %}
{% block body %}
    {# Page Heading #}
    {% set headingvars = {'headingcontent' : 'Group Instruction #' ~ entity.id } %}
    {% include 'snippets/pageHeading.html.twig' with headingvars %}
    
    {# Back button, edit and print buttons #}
    {% set toolbarvars = {'basepath' : path('groupinstruction'), 'editpath' : path('groupinstruction_edit', { 'id': entity.id }), 'printpath' : path('groupinstruction_print', { 'id': entity.id }), 'editrole' : 'IS_AUTHENTICATED_FULLY' } %}
    {% include 'snippets/showToolbar.html.twig' with toolbarvars %}
    
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Date and Time</caption>
              <tbody>
                  <tr>
                      <th>Instruction Date</th>
                      <td>{{ entity.instructionDate|date('l n/j/y') }}</td>
                  </tr>
                    <tr>
                        <th>Start</th>
                        <td>{{ entity.startTime|date('g:i A') }}</td>
                    </tr>
                    <tr>
                        <th>End</th>
                        <td>{{ entity.endTime|date('g:i A') }}</td>
                    </tr>
              </tbody>
          </table>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">
          <table class="table table-responsive table-striped">
              <caption>Session Details</caption>
              <tbody>
                    <tr>
                        <th>Instructor</th>
                        <td>{{entity.instructor}}</td>
                    </tr>
                    <tr>
                        <th>Program</th>
                        <td>{{entity.program}}</td>
                    </tr>
                    <tr>
                        <th>Course</th>
                        <td>{{ entity.course }}</td>
                    </tr>
                    <tr>
                        <th>Level</th>
                        <td>
                            {% if entity.level == 'grad' %}
                                Graduate 
                            {% elseif entity.level == 'high school' %}
                                High School
                            {% else %}
                                {{ entity.level|capitalize }}
                            {% endif %}
                            {% if entity.levelDescription %}
                                ({{ entity.levelDescription}})
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Attendance</th>
                        <td>{{ entity.attendance }}</td>
                    </tr>
                    <tr>
                        <th>Notes</th>
                        <td>{{ entity.note }}</td>
                    </tr>
              </tbody>
          </table>
      </div>
    </div>
{% endblock %}
