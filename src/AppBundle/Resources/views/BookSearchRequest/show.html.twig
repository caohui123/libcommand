{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BookSearchRequest</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Booktitle</th>
                <td>{{ entity.bookTitle }}</td>
            </tr>
            <tr>
                <th>Bookauthor</th>
                <td>{{ entity.bookAuthor }}</td>
            </tr>
            <tr>
                <th>Bookcallnumber</th>
                <td>{{ entity.bookCallNumber }}</td>
            </tr>
            <tr>
                <th>Usefuldate</th>
                <td>{{ entity.usefulDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Patronfirstname</th>
                <td>{{ entity.patronFirstName }}</td>
            </tr>
            <tr>
                <th>Patronlastname</th>
                <td>{{ entity.patronLastName }}</td>
            </tr>
            <tr>
                <th>Patronphone</th>
                <td>{{ entity.patronPhone }}</td>
            </tr>
            <tr>
                <th>Patronemail</th>
                <td>{{ entity.patronEmail }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('booksearchrequest') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('booksearchrequest_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
