{% extends "emailbase.html.twig" %}

{% block body %}
{% if form.patronFirstName is defined %}
  Dear {{ form.patronFirstName }},
{% else %}
  Dear Patron,
{% endif %}

<h1>Thank you for your Book Request.</h1>
<p>You will be notified via email by a member of our staff when there is an update to the status of your request.</p>

<table border="0" cellpadding="10" cellspacing="1" width="100%">
  <caption style="background:rgb(108, 122, 137); padding:4px; color:#FFFFFF"><strong>Request Information</strong></caption>
  <tr><td align="right">Received</td><td align="right">{{ form.created|date('l n/j/y g:i A') }}</td></tr>
  <tr><td align="right">Needed By</td><td align="right">{{ form.usefulDate|date('l n/j/y g:i A') }}</td></tr>
  <tr><td align="right">Title</td><td align="right">{{ form.bookTitle }}</td></tr>
  <tr><td align="right">Author</td><td align="right">{{ form.bookAuthor }}</td></tr>
  <tr><td align="right">Call Number</td><td align="right">{{ form.bookCallNumber }}</td></tr>
</table>
{% endblock %}
