{% extends '::printbase.html.twig' %}
{% block title %}Government Documents Monthly Statistics{% endblock %}
{% block body %}
<h1>Government Documents Statistics: {{entity.month|date('F Y')}}</h1>
<button class="print-btn" onclick="window.print();">Print</button>
    <table class="libcommand-print-table libcommand-print-table-650">
        <caption>Items</caption>
        <tbody>
            <tr>
                <td>Items added (gross)</td>
                <td>{{ entity.itemsAddedGross }}</td>
            </tr>
            <tr>
                <td>Items withdrawn</td>
                <td>{{ entity.itemsWithdrawn }}</td>
            </tr>
            <tr>
                <td>Items added (net)</td>
                <td>{{ entity.itemsAddedGross - entity.itemsWithdrawn}}</td>
            </tr>
        </tbody>
    </table>
    <table class="libcommand-print-table libcommand-print-table-650">
        <caption>Usage</caption>
        <tbody>
            <tr>
                <td>Paper</td>
                <td>{{entity.paper}}</td>
            </tr>
            <tr>
                <td>Electronic (OPAC URLs)</td>
                <td>{{entity.electronicOpacUrls}}</td>
            </tr>
        </tbody>
    </table>
    <table class="libcommand-print-table libcommand-print-table-650">
        <caption>Processing</caption>
        <tbody>
            <tr>
                <td>Weekly records added</td>
                <td>{{ entity.weeklyRecordsAdded }}</td>
            </tr>
            <tr>
                <td>Monthly records added</td>
                <td>{{ entity.monthlyRecordsAdded }}</td>
            </tr>
            <tr>
                <td>Monthly non-overlays</td>
                <td>{{ entity.monthlyNonOverlays }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
