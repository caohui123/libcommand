{% extends '::base.html.twig' %}
{% block title %}Library Staff{% endblock %}
{% block body -%}
    <h1 class="page-header">Staff List <span><a class="btn btn-sm btn-primary" href="{{ path('staff_new') }}"><span class="glyphicon glyphicon-plus"></span> New Staff</a></span></h1>
    <div class="table-responsive">
      <table class="table table-striped table-responsive records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Staff ID</th>
                <th>Status</th>
                <th>Job Title</th>
                <th>Guides URL</th>
                <th>Office</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                  {{ entity.lastName }}, {{ entity.firstName }}
                </td>
                <td>{{ entity.staffId }}</td>
                <td>
                  {% for status in entity.employmentStatus %}
                    lobbage
                  {% endfor %}
                </td>
                <td>{{ entity.jobTitle }}</td>
                <td>{{ entity.guidesUrl }}</td>
                <td>{{ entity.office }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.email }}</td>
                <td>
                    {% if is_granted('ROLE_STAFF_EDIT') %}
                        <a class="badge" href="{{ path('staff_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                    {% elseif is_granted('ROLE_STAFF_VIEW') %}
                        <a class="badge" href="{{ path('staff_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span> Show</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
    </div><!--/.table-responsive-->
    {% endblock %}
    
    
