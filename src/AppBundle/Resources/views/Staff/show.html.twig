{% extends '::base.html.twig' %}
{% block title %}{{ entity.firstName }} {{ entity.lastName }} &#8211; Library Staff{% endblock %}
{% block body %}
  <h1 class="page-header">{{ entity.firstName }} {{ entity.lastName }} <br> <small>{{ entity.jobTitle }} </small></h1>
    <div class="row">
      <div class="col-xs-12">
        <p><a class="btn btn-sm btn-primary" href="{{ path('staff') }}"><span class="glyphicon glyphicon-arrow-left"></span> Back to Staff List</a></p>
      </div>
    </div>
    {% if is_granted('ROLE_STAFF_EDIT', entity) %}
    <div class="row">
        <div class="col-xs-12">
            <p><a class="badge" href="{{ path('staff_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span> Edit Staff Member</a></p>
        </div>
    </div>
    {% endif %}
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-8">
        <table class="table table-striped table-responsive record_properties">
            <tbody>
                <tr>
                    <th>LDAP User</th>
                    <td>{% if ldap_user is not null %}{{ ldap_user}}{% else %}Not Set{% endif %} </td>
                </tr>
                <tr>
                    <th>Staff ID</th>
                    <td>{{ entity.staffId }}</td>
                </tr>
                <tr>
                    <th>Employment Status</th>
                    <td>
                      {% for status in entity.employmentStatus %}
                        {{ status }}
                      {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Job Description</th>
                    <td>{{ entity.jobDescription }}</td>
                </tr>
                <tr>
                    <th>Functional Area</th>
                    <td>{{ entity.staffFunctionalArea }}</td>
                </tr>
                <tr>
                    <th>LibGuides URL</th>
                    <td>{{ entity.guidesUrl }}</td>
                </tr>
                <tr>
                    <th>Office</th>
                    <td>{{ entity.office }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ entity.phone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Home Address</th>
                    <td>{{ entity.homeStreet }}, {{ entity.homeCity }}, {{ entity.homeState }} {{ entity.homeZip }}</td>
                </tr>
                <tr>
                    <th>Home Phone</th>
                    <td>{{ entity.homePhone }}</td>
                </tr>
                <tr>
                    <th>Cell Phone</th>
                    <td>{{ entity.cellPhone }}</td>
                </tr>
                <tr>
                    <th>Bio</th>
                    <td>{{ entity.selfIntro }}</td>
                </tr>
                <tr>
                    <th>Favorite Websites</th>
                    <td>{{ entity.favoriteWebsites }}</td>
                </tr>
            </tbody>
        </table>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-4">
           <div class="panel panel-default">
                <div class="panel-heading">Current Photo</div>
                <div class="panel-body">
                    {% if entity.photo != '' %}
                        <img src="{{ asset('uploads/profile/' ~ entity.photo) }}" alt="A photo of {{ entity.firstName}} {{ entity.lastName }}" title="A photo of {{ entity.firstName}} {{ entity.lastName }}"/>
                    {% else %}
                        No photo uploaded
                    {% endif %}
                </div>
                <div class="panel-footer">
                    <p>
                    {% if entity.showPhoto == 1 %}
                      Set to display publicly
                    {% else %}
                      Set to NOT display publicly
                    {% endif %}
                    </p>
                </div>
            </div>
      </div>
    </div>
{% endblock %}
