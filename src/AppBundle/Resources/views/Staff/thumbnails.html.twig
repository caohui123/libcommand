<div id="thumbnail_image_list_container">
    <ul id="thumbnail_image_list">
        {% for entity in entities %}
        <li class="thumbnail_image_list_item">
            <label><input type="radio" name="profile_image" id="image_{{ entity.path }}" value="{{ entity.id }}" class="thumbnail-photo-select" /> <img class="thumbnail-photo-select" id="{{ entity.path }}" src="{{ asset('uploads/profile/' ~ entity.path) | imagine_filter('thumb') }}" alt="{{ entity.name }}" title="{{ entity.name }}" /></label>
        </li>
        {% endfor %}
    </ul>
</div>